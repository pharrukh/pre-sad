{
	"version": "0.2.0",
	"configurations": [
		{
			"name": ".NET Core Launch (console)",
			"type": "coreclr",
			"request": "launch",
			// set build task name
			"preLaunchTask": "build",
			// set dll path
			"program": "${workspaceFolder}/bin/Debug/netcoreapp3.1/bubble-sort.dll",
			"args": [],
			// set project dir path
			"cwd": "${workspaceRoot}",
			"console": "externalTerminal",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}